@using CodingEvents.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
<table style="width:75%">
    <tr>
        <th>Event Description</th>
        <th>Event ID</th>
        <th>Event Name</th>
        <th>Contact Email</th>
    </tr>
        @foreach (Event meeting in Model)
        {<tr>
    <td>@meeting.Id</td>
    <td>@meeting.Name</td>
    <td>@meeting.Description</td>
    <td>@meeting.ContactEmail</td>
    <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a></td>
</tr>
    }
    </table>

}

<div style="position: fixed; bottom: 60px; width: 100%;"><partial name="/Views/Shared/_LinkListPartial.cshtml" /></div>

